<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UNE2021" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Bottom_Card_Options">
        <item name="android:background">@color/colorPrimaryText</item>
    </style>

    <style name="ButtonBorderless" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/grey_90</item>
    </style>

    <style name="EditText_Primary">
        <item name="android:textColor">@color/grey_20</item>
        <item name="android:textColorHint">@color/grey_40</item>
    </style>

    <style name="EditText_Secondary">
        <item name="android:textColor">@color/grey_40</item>
    </style>

    <style name="TextView_Grey">
        <item name="android:textColor">#FFE0B2</item>
    </style>

    <style name="tableCabecera" parent="tableCelda">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="tableCelda">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>