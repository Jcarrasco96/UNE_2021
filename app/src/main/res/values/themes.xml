<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UNE2021" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
    </style>

    <style name="Theme.UNE2021.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UNE2021.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UNE2021.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Bottom_Card_Options">
        <item name="android:background">@color/grey_3</item>
    </style>

    <style name="Button.Accent.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/teal_700</item><!-- @color/teal_200 -->
    </style>

    <style name="ButtonBorderless" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple_700</item>
    </style>

    <style name="EditText_Primary">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorHint">@color/grey_40</item>
    </style>

    <style name="EditText_Secondary">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="EditText_Flat_Grey" parent="@style/Theme.UNE2021">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:textColorHint">@color/grey_40</item>
    </style>

    <style name="TextView_Grey">
        <item name="android:textColor">#616161</item>
    </style>

    <style name="tableCabecera" parent="tableCelda">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tableCelda">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>